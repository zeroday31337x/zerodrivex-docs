datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum DocumentType {
  RESEARCH
  WHITEPAPER
  PRODUCT
  BLOG
  INTERNAL
}

enum DocumentFormat {
  PDF
  DOCX
  MARKDOWN
  HTML
  TEXT
}

model Document {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  summary     String?
  type        DocumentType
  format      DocumentFormat

  // content & storage
  sourcePath  String
  contentText String?

  // metadata
  tags        String[]
  published   Boolean  @default(false)
  version     Int      @default(1)

  // relations (inverse sides)
  versions    DocumentVersion[]
  categories  DocumentCategory[]

  // audit
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([published])
}

model DocumentVersion {
  id          String   @id @default(cuid())
  documentId  String
  version     Int
  sourcePath  String
  contentText String?

  createdAt   DateTime @default(now())

  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, version])
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  order     Int      @default(0)

  // inverse relation
  documents DocumentCategory[]

  createdAt DateTime @default(now())
}

model DocumentCategory {
  documentId String
  categoryId String

  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([documentId, categoryId])
}
